<project name="ST" default="all" basedir=".">


	<property name="encoding" value="UTF-8" />
	

	<target name="all">
		<antcall target="compile"/>
		<antcall target="package"/>
		<!--<antcall target="deploy"/>-->
	</target>

	<target name="init">
		<delete dir="bin"/>
		<mkdir dir="bin"/>
		<mkdir dir="bin/conf"/>
	</target>

	<target name="compile">
		<javac srcdir="src" encoding="${encoding}" destdir="bin"
           debug="on" optimize="off" source="1.6" target="1.6">
			<classpath>
				<fileset dir="libs">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

